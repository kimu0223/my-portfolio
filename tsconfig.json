{
  "compilerOptions": {
    "jsx": "react-jsx", // JSX の設定を統一
    "strict": true,
    "baseUrl": "./", // プロジェクトのルートを基準に
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "app", // app-router を使用する場合、app フォルダを含める
    "types" // 型定義ファイルを含める
  ],
  "exclude": [
    "node_modules"
  ]
}